<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="Commit"
            visible="true"
            id="CommitSummarizer.core.actionSet">
         <menu
               label="CommitSummarizer"
               id="sampleMenu">
            <separator
                  name="sampleGroup">
            </separator>
         </menu>
         <action
               class="co.edu.unal.colswe.CommitSummarizer.core.CommitAction"
               icon="icons/sample.gif"
               id="co.edu.unal.colswe.CommitSummarizer.core.SampleAction"
               label="Commit"
               menubarPath="sampleMenu/sampleGroup"
               toolbarPath="sampleGroup"
               tooltip="Commit changes to source code repository">
         </action>
      </actionSet>
   </extension>
   <extension
         id="CommitSummarizer.core.popupMenus"
         point="org.eclipse.ui.popupMenus"> 
      <viewerContribution 
         id="CommitSummarizer.core.popupMenus" 
         targetID="org.eclipse.jdt.ui.PackageExplorer">
         <action
               class="co.edu.unal.colswe.CommitSummarizer.core.CommitViewAction"
               icon="icons/sample.gif"
               id="commitAction"
               label="Commit"
               menubarPath="CommitSummarizerMenu/CommitSummarizerGroup"
               state="true"> 
         </action>
         <menu
               id="CommitSummarizerMenu"
               label="CommitSummarizer">
            <separator
                  name="CommitSummarizerGroup">
            </separator>
         </menu> 
      </viewerContribution> 
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="CommitSummarizer.core.commands.category"
            name="Sample Category">
      </category>
      <command
            categoryId="CommitSummarizer.core.commands.category"
            id="CommitSummarizer.core.commands.sampleCommand"
            name="Commit Command">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="commitsummarizer.core.handlers.CommitCommandHandler"
            commandId="CommitSummarizer.core.commands.sampleCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="CommitSummarizer.core.commands.sampleCommand"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+6">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.jdt.ui.PackageExplorer">
         <menu
               id="CommitSummarizer.core.menus.sampleMenu"
               label="CommitSumm"
               mnemonic="M">
            <command
                  commandId="CommitSummarizer.core.commands.sampleCommand"
                  id="CommitSummarizer.core.menus.sampleCommand"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
      
   </extension>

</plugin>
